<!DOCTYPE html>
<html lang="ko">
<head>
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<title>LmsRight : 강의 목록</title>
<!-- sweet alert import -->
<script src='${CTX_PATH}/js/sweetalert/sweetalert.min.js'></script>
<jsp:include page="/WEB-INF/view/common/common_include.jsp"></jsp:include>
<!-- sweet swal import -->

<script type="text/javascript">

	// 그룹코드 페이징 설정
	var pageSizeLecture = 5;
	var pageBlockSizeLecture = 5;
	
	// 상세코드 페이징 설정
	var pageSizeComnDtlCod = 5;
	var pageBlockSizeComnDtlCod = 10;
	
	
	/** OnLoad event */ 
	$(function() {
		comcombo("lecture_no", "lectureName", "all", "");
		
		lectureListSearch();
		
		// 버튼 이벤트 등록
		fRegisterButtonClickEvent();
	});
	

	/** 버튼 이벤트 등록 */
	function fRegisterButtonClickEvent() {
		$('a[name=btn]').click(function(e) {
			e.preventDefault();

			var btnId = $(this).attr('id');

			switch (btnId) {
				case 'btnSearchLecture':
					lectureListSearch();
					break;
				case 'btnSaveLecture' :
					fn_SaveLecture();
					break;
				case 'btnCloseLecture' :
					gfCloseModal();
					break;
			}
		});
	}
	
function lectureListSearch(pagenum) {
		
		pagenum = pagenum || 1;
		
		//alert(pagenum);
		
		var param = {
				pagenum : pagenum,
				pageSize : pageSizeLecture,
				lectureName : $("#lectureName").val(),
				searchWord : $("#searchWord").val()
		};
		
		var listcallback = function(returndata) {
			console.log("returndata : " + returndata);
			
			$("#listLecture").empty().append(returndata);
			
			var totalcnt = $("#totalcnt").val();
			
			var paginationHtml = getPaginationHtml(pagenum, totalcnt, pageSizeLecture, pageBlockSizeLecture, 'lectureListSearch');
			
			$("#lecturePagination").empty().append(paginationHtml);
		};
		
		callAjax("/adm/lectureManagementList.do", "post" , "text", "false", param, listcallback);

	}
	
/* 	function fn_lectureListSearch(lectureNo, loginID){
		
		var param = {
				lectureNo : lectureNo,
				loginID : loginID
		}
		
		var resultcallback = function(data) {
			
			$("#layer1").empty().append(data);
			
			gfModalPop("#layer1");
			
		}
		
		
		callAjax("/std/lectureSelect.do", "post" , "text", "false", param, resultcallback);
	} */
	
	function fn_lectureInsert(lectureNo, loginID){
		$("#action").val("I");
		
		//강의 폼 초기화
		fn_initForm(); 
		
		//모달 팝업
		gfModalPop("#layer1");
	}
	
	function fn_initForm(){

		$("#teacher_name").val("");
		$("#lecture_name").val("");
		$("#lecture_person").val("");
		$("#lecture_total").val("");
		$("#lecture_start").val("");
		$("#lecture_end").val("");
		$("#lecture_goal").val("");
		
	}
	
	function fn_SaveLecture(){
		
		var action = $("#action").val();
		
		if(action == "I"){
			if(!fn_validateitem()){
				return;
			}
		}
		
		var param = {
				action: $("#action").val(),
				loginID : $("#loginID").val(),
				testNo : $("#test_no").val(),
				lectureName : $("#lecture_name").val(),
				lecturePerson : $("#lecture_person").val(),
				lectureTotal : $("#lecture_total").val(),
				lectureStart: $("#lecture_start").val(),
				lectureEnd: $("#lecture_end").val(),
				lectureGoal: $("#lecture_goal").val()
		};
		
		var savecallback = function(selectresult){
			console.log("savecallback : " + JSON.stringify(selectresult));	
			
			alert("저장 되었습니다.");
			
			gfCloseModal();
			
			lectureListSearch();
		};
		callAjax("/adm/lectureInsert.do", "post" , "json", "false", param, savecallback);
		
	}
	
	function fn_validateitem(){
		var chk = checkNotEmpty(
				[
						[ "teacher_name", "강사명을 입력해 주세요." ]
					,	[ "lecture_name", "강의명을 입력해 주세요" ]
					,	[ "lecture_person", "모집인원을 입력해 주세요" ]
					,	[ "lecture_total", "마감인원을 입력해 주세요" ]
					,	[ "lecture_start", "시작날짜를 입력해 주세요" ]
					,	[ "lecture_end", "종료날짜를 입력해 주세요" ]
					,	[ "lecture_goal", "수업목표를 입력해 주세요" ]
				]
		);

		if (!chk) {
			return;
		}

		return true;
	}
	
</script>

</head>
<body>
<form id="myForm" action=""  method="">
	<input type="hidden" name="action" id="action" value="">
	
	<!-- 모달 배경 -->
