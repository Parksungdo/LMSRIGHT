			                    <a href="" class="btnType blue" id="btnSearchTeacher" name="btn"><span>검  색</span></a>
							</span>
						</p>
						
						<div class="divTeacherList">
							
							<table class="col">
								<caption>caption</caption>
								<colgroup>
									<col width="20%">
									<col width="20%">
									<col width="20%">
									<col width="20%">
									<col width="20%">
								</colgroup>
	
								<thead>
									<tr>
										<th scope="col">강사ID</th>
										<th scope="col">강사명</th>
										<th scope="col">강사 전화번호</th>
