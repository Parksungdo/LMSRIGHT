<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>					
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %>

			<dl>
				<dt>
					<strong>그룹코드 관리</strong>
				</dt>
				<dd class="content">
					<!-- s : 여기에 내용입력 -->
					<table class="row">
						<caption>caption</caption>
						<colgroup>
							<col width="120px">
							<col width="*">
							<col width="120px">
							<col width="*">
						</colgroup>
	
						<tbody>
							<tr>
								<th scope="row">과목 </th>
								<td>${lectureSelect.lecture_name}</td>
								<th scope="row">강사명 </th>
								<td>${lectureSelect.teacher_name}</td>
							</tr>
							<tr>
								<th scope="row">강의 시작일 </th>
								<td>${lectureSelect.lecture_start}</td>
									<th scope="row">강의 마감일 </th>
								<td>${lectureSelect.lecture_end}</td>
							</tr>
							<tr>
								<th scope="row">모집인원 </th>
								<td>${lectureSelect.lecture_person}</td>
									<th scope="row">마감인원 </th>
								<td>${lectureSelect.lecture_total}</td>
							</tr>
							<tr>
								<th scope="row">수업목표</th>
								<td colspan="3">${lectureSelect.lecture_goal}</td>
							</tr>
					
							<tr>
								<th scope="row">강의계획<span class="font_red">*</span></th>
								<td colspan="3"> 여기 안에 강의 계획 넣을 예정</td>
							</tr>
						</tbody>
					</table>
	
					<!-- e : 여기에 내용입력 -->
	
					<div class="btn_areaC mt30">
						<a href="" class="btnType blue" id="btnSaveLecture" name="btn"><span>신청</span></a> 
						<a href=""	class="btnType gray"  id="btnCloseLecture" name="btn"><span>취소</span></a>
					</div>
				</dd>
			</dl>

            <div class="divLectureList" style="overflow:scroll; width:500px; height:150px;">
							
					<table class="col">
						<caption>caption</caption>
						<colgroup>
							<col width="10%">
							<col width="30%">
							<col width="60%">
						</colgroup>

						<thead>
							<tr>
								<th scope="col">주 차수</th>
								<th scope="col">학습목표</th>
								<th scope="col">학습내용</th>
							</tr>
						</thead>
						<tbody id="listLecture">
								<c:if test="${totalcnt eq 0 }">
									<tr>
										<td colspan="5">데이터가 존재하지 않습니다.</td>
									</tr>
								</c:if>
								
								<c:if test="${totalcnt > 0 }">
									<c:forEach items="${lectureListSearch2}" var="list">
										<tr>
											<td>${list.teacher_name}</td>
											<td><a href="javascript:fn_lectureListSearch('${list.lecture_no}')">${list.lecture_name}</a></td>
											<td>${list.lecture_start}</td>
										</tr>
									</c:forEach>
								</c:if>
						</tbody>
					</table>
			</div>


			<a href="" class="closePop"><span class="hidden">닫기</span></a>

