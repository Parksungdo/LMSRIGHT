<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>

<!DOCTYPE html>
<html lang="ko">
<head>
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<title>LmsRight</title>
<!-- sweet alert import -->
<script src='${CTX_PATH}/js/sweetalert/sweetalert.min.js'></script>
<jsp:include page="/WEB-INF/view/common/common_include.jsp"></jsp:include>
<!-- sweet swal import -->

<script type="text/javascript">

	// 그룹코드 페이징 설정
	var emppageSize = 5;
	var emppageBlockSize = 10;
	
	/** OnLoad event */ 
	$(function() {
		
		//취업 정보 등록(상단) 부분
		employclasssearchlist();
		
		//하단 학생에 대한 디테일리스트 부분 숨기기
		$("#studentdetailcontent").hide();
		
		// 버튼 이벤트 등록
		fRegisterButtonClickEvent();
	});
	

	/** 버튼 이벤트 등록 */
	function fRegisterButtonClickEvent() {
		$('a[name=btn]').click(function(e) {
			e.preventDefault();

			var btnId = $(this).attr('id');

			switch (btnId) {
				//학생 신규등록 버튼
				case 'empnewpopup':
					$("#action").val("I");
					break;
				//신규등록 > 저장 버튼
				case 'btnSaveempstudent':
					fn_insertempstudent();
					break;
				//삭제 버튼
				case 'btnempDelete' :
					$("#action").val("D");
					fn_deleteempstudent(empno);
					break;
				//수정 완료 버튼
				case 'btnempupdate' :
					fn_btnempupdate();
					break;
				//검색 버튼
				case 'btnempstuSearch':
					employclasssearchlist();
					break;
				//닫기 버튼
				case 'btnCloseGrpCod' :
					gfCloseModal();
					break;
			}
		});
	}
	//취업정보등록(상단) list 보여주는 부분
	function employclasssearchlist(pagenum){
		
		pagenum = pagenum || 1;
		
		var param = {
				pagenum : pagenum,
				pageSize : emppageSize,
				empstuSearch : $("#empstuSearch").val()
		}
		
		console.log("employclasssearchlist 의 param : ", param);
		
		var listcallback = function (employclasslistdata){
			
			$("#detailstuclasslist").empty().append(employclasslistdata);
			
			var totalcnt = $("#totalcnt").val();
			
			//하단 페이지처리
			var paginationHtml = getPaginationHtml(pagenum, totalcnt, emppageSize, emppageBlockSize, 'detailstuclasslist');
			$("#detailstudentclassPagination").empty().append( paginationHtml );
		}
		
		callAjax("/adm/empclasslist.do", "post" , "text", "false", param, listcallback);
	}
	
	//취업 정보 등록(상단)에서 확인 버튼을 눌렀을 때
 	function fn_studentdetail(empno){
		alert("확인 버튼");
		
		console.log("확인 버튼의 empno : ", empno); //가져오는거 확인
		
		$("#empno").val(empno); //hieen 값에 value를 넣어준다.
		
		//하단 학생 디테일 리스트
		$("#studentdetailcontent").show();
		
		//하단의 emp디테일 데이터 불러오는것 연결
		empdetailsearch();
	}
	
	//하단 디테일 내용 보인은 곳.
	function empdetailsearch(no){
		
		var param = {
				empno : $("#empno").val()
		}
		
		var listcallback= function(emplistdata){
			
			//확인 눌렀을 때 디테일 목록 값 가져오는 곳.
			empdetaillist(emplistdata);
			
		}
		callAjax("/adm/detailcontent.do", "post" , "json", "false", param, listcallback);
	}
	
	//하단 디테일에서 값 가져오는 부분.
	function empdetaillist(data){
		
		//해당아이디의 확인 버튼을 누르고 하단에 나오는 디테일 내용
		$("#name").empty().append(data.employinfo.name);
		$("#detail_emp_no").empty().append(data.employinfo.employ_no);
		$("#detail_loginID").empty().append(data.employinfo.loginID);
		$("#detail_emp_hp").empty().append(data.employinfo.user_hp);
		$("#detail_emp_name").empty().append(data.employinfo.employ_name);
		$("#detail_emp_join").empty().append(data.employinfo.employ_join);
		$("#detail_emp_leave").empty().append(data.employinfo.employ_leave);
		$("#detail_emp_state").empty().append(data.employinfo.employ_state);
		
		
		//수정버튼 눌렀을 때 내용 나오게.
		$("#stdname").empty().append(data.employinfo.name);
		$("#stdloginID").val(data.employinfo.loginID);
		$("#stdemp_hp").empty().append(data.employinfo.user_hp);
		$("#stdemp_no").val(data.employinfo.employ_no);
		$("#emp_name").val(data.employinfo.employ_name);
		$("#emp_state").val(data.employinfo.employ_state);
		$("#emp_join").val(data.employinfo.employ_join);
		$("#emp_leave").val(data.employinfo.employ_leave);
	}
	
	//신규등록 버튼을 눌렀을 때 뜨는 팝업.
	function empnewpopup(empno){
		
		$("#action").val("I");
		gfModalPop("#layer1"); //신규버튼을 눌렀을 때 1번 모달을 띄운다.
	}
	
	//신규등록 > 저장 버튼 눌렀을 때 
	function fn_insertempstudent(){
		
		var param = {
				action : $("#action").val(),
				emp_no : $("#emp_no").val(),
				new_loginID : $("#new_loginID").val()
		}
		
		console.log("저장버튼의 param", param);
		
		var saveCallBack = function(data){
			gfCloseModal();
			location.reload();
		}
		callAjax("/adm/empsave.do", "post", "json", "false", param, saveCallBack);
	}
	
	//삭제하기전 action "D"를 담아주는 곳.
	function deletestatus(empno){
		var deleteaction = $("#action").val("D");
		
		fn_deleteempstudent();
	}
	
	//확인 > 삭제 버튼을 눌렀을 때
	function fn_deleteempstudent(){
		
		var param = {
				action : $("#action").val(),
				emp_no : $("#empno").val()
		}
		
		var saveCallBack = function(data){
			gfCloseModal();
			location.reload();
		}
		callAjax("/adm/empsave.do", "post", "json", "false", param, saveCallBack);
	}
	
	
	
	//하단 학생 디테일에서 수정 버튼을 눌렀을 때 뜨는 팝업
	function fn_empupdate(){
		
		$("#action").val("U");
		gfModalPop("#layer2");
	}
	
	//하단 수정 버튼 누른 후 수정(수정완료) 버튼을 눌렀을 때
	function fn_btnempupdate(){
		
		var param = {
				action : $("#action").val(),
				emp_no : $("#stdemp_no").val(),
				loginID : $("#stdloginID").val(),
				emp_name : $("#emp_name").val(),
				emp_state : $("#emp_state").val(),
				emp_join : $("#emp_join").val(),
				emp_leave :$("#emp_leave").val()
		}
		
		var saveCallBack = function(data){
			gfCloseModal();
			location.reload();
		}
		callAjax("/adm/empupdate.do", "post", "json", "false", param, saveCallBack);
	}
	
</script>

</head>
<body>
<form id="myForm" action=""  method="">
	<input type="hidden" name="action" id="action" value="">
	<input type="hidden" name="empno" id="empno" value="">
	
	<!-- 모달 배경 -->
	<div id="mask"></div>

	<div id="wrap_area">

		<h2 class="hidden">header 영역</h2>
		<jsp:include page="/WEB-INF/view/common/header.jsp"></jsp:include>

		<h2 class="hidden">컨텐츠 영역</h2>
		<div id="container">
			<ul>
				<li class="lnb">
					<!-- lnb 영역 --> <jsp:include
						page="/WEB-INF/view/common/lnbMenu.jsp"></jsp:include> <!--// lnb 영역 -->
				</li>
				<li class="contents">
					<!-- contents -->
					<h3 class="hidden">contents 영역</h3> <!-- content -->
					<div class="content">

						<p class="Location">
							<a href="../dashboard/dashboard.do" class="btn_set home">메인으로</a> <span
								class="btn_nav bold">취업관리</span> <span class="btn_nav bold">취업 정보</span> 
								<a href="../adm/employ.do" class="btn_set refresh">새로고침</a>
						</p>
						
					<p class="conTitle">
							<span>취업 정보 등록</span> <span class="fr"> 
		     	                <input type="text" style="width: 300px; height: 25px;" id="empstuSearch" name="empstuSearch" placeholder="학생 아이디로 검색">                    
			                    <a href="" class="btnType blue" id="btnempstuSearch" name="btn"><span>검  색</span></a>
			                    <a href="javascript:empnewpopup()" class="btnType blue" id="modal" name="modal"><span>신규등록</span></a>
							</span>
					</p>
					<div class="employclassList">
							
							<table class="col">
								<caption>caption</caption>
								<colgroup>
									<col width="10%">
									<col width="10%">
									<col width="20%">
									<col width="25%">
									<col width="20%">
									<col width="15%">
								</colgroup>
	
								<thead>
									<tr>
										<th scope="col">학번</th>
										<th scope="col">학생명</th>
										<th scope="col">연락처</th>
										<th scope="col">아이디</th>
										<th scope="col">가입일자</th>
										<th scope="col">확인</th>
									</tr>
								</thead>
								<tbody id="detailstuclasslist"></tbody>
							</table>
						</div>
	
						<div class="paging_area"  id="detailstudentclassPagination"> </div>
						
						<br><br><br><br>
						
						<div id="studentdetailcontent">
						<p>
						<div id="detail_btn">
							<span class="fr"> 
		     	                <a href="javascript:fn_empupdate()" class="btnType blue" id="emp_updqte_data" name="modal"><span>수정</span></a>
								<a href="" class="btnType blue" id="btnempDelete" name="btn"><span>삭제</span></a>
							</span>
						</div>
						</p>
							<div class="paging_area"  id=""> </div>
							<table class="row">
								<caption>caption</caption>
								<colgroup>
									<col width="*">
									<col width="*">
									<col width="*">
									<col width="*">
								</colgroup>
								
									<tr>
										<th scope="col">학번</th>
										<td colspan="3"><div id="detail_emp_no"></div></td>
										<th scope="col">아이디</th>
										<td colspan="3"><div id="detail_loginID"></div></td>
									</tr>
									<tr>
										<th scope="col">학생명</th>
										<td colspan="3"><div id="name"></div></td>
										<th scope="col">연락처</th>
										<td colspan="3"><div id="detail_emp_hp"></div></td>
									</tr>
									<tr>
										<th scope="col">업체명</th>
										<td colspan="3"><div id="detail_emp_name"></div></td>
										<th scope="col">재직여부(N / Y)</th>
										<td colspan="3"><div id="detail_emp_state"></div></td>
									</tr>
									<tr>
										<th scope="col">입사일</th>
										<td colspan="3"><div id="detail_emp_join"></div></td>
										<th scope="col">퇴사일</th>
										<td colspan="3"><div id="detail_emp_leave"></div></td>
									</tr>
							</table>
							<div class="paging_area"  id="detailstudentclassPagination"> </div>
						</div>
	
						
					</div> <!--// content -->
					
					<h3 class="hidden">풋터 영역</h3>
						<jsp:include page="/WEB-INF/view/common/footer.jsp"></jsp:include>
				</li>
			</ul>
		</div>
	</div>

	<!-- 모달팝업 -->
	<div id="layer1" class="layerPop layerType2" style="width: 600px;">
		<dl>
			<dt>
				<strong>학생 등록</strong>
			</dt>
			<dd class="content">
				<!-- s : 여기에 내용입력 -->
				<table class="row">
					<caption>caption</caption>
					<colgroup>
						<col width="120px">
						<col width="*">
						<col width="120px">
						<col width="*">
					</colgroup>

					<tbody>
						<tr>
							<th scope="row">학번 <span class="font_red">*</span></th>
							<td colspan="3"><input type="text" class="inputTxt p100" name="emp_no" id="emp_no" /></td>
							<th scope="row">학생 아이디 <span class="font_red">*</span></th>
							<td colspan="3"><input type="text" class="inputTxt p100" name="new_loginID" id="new_loginID" /></td>
						</tr>
					</tbody>
				</table>
				<div class="btn_areaC mt30">
					<a href="" class="btnType blue" id="btnSaveempstudent" name="btn"><span>저장</span></a> 
					<a href=""	class="btnType gray"  id="btnCloseGrpCod" name="btn"><span>취소</span></a>
				</div>
			</dd>
		</dl>
		<a href="" class="closePop"><span class="hidden">닫기</span></a>
	</div>

	<div id="layer2" class="layerPop layerType2" style="width: 1000px;">
		<dl>
			<dt>
				<strong>학생정보</strong>
			</dt>
			<dd class="content">

				<!-- s : 여기에 내용입력 -->

				<table class="row">
					<caption>caption</caption>
					<colgroup>
						<col width="120px">
						<col width="*">
						<col width="120px">
						<col width="*">
					</colgroup>

					<tbody>
						<tr>
							<th scope="col">학번</th>
							<td colspan="1">
							<input type="text" class="inputTxt p100" id="stdemp_no" name="stdemp_no" readonly="readonly"/>
							</td>
							<th scope="col">학생명</th>
							<td colspan="1"><div id="stdname"></div></td>
							<th scope="col">아이디</th>
							<td colspan="1">
							<input type="text" class="inputTxt p100" id="stdloginID" name="stdloginID" readonly="readonly"/>
							</td>
							<th scope="col">연락처</th>
							<td colspan="1"><div id="stdemp_hp"></div></td>
						</tr>
						<tr>
							<th scope="col">업체명</th>
							<td colspan="3"><input type="text" class="inputTxt p100" id="emp_name" name="emp_name" /></td>
							<th scope="col">재직여부 (N / Y)</th>
							<td colspan="3"><input type="text" class="inputTxt p100" id="emp_state" name="emp_state" /></td>
						</tr>
						<tr>
							<th scope="col">입사일</th>
							<td colspan="3"><input type="text" class="inputTxt p100" id="emp_join" name="emp_join" /></td>
							<th scope="col">퇴사일</th>
							<td colspan="3"><input type="text" class="inputTxt p100" id="emp_leave" name="emp_leave" /></td>
						</tr>
					</tbody>
					
				</table>
				<div class="btn_areaC mt30">
					<a href="" class="btnType gray" id="btnempupdate" name="btn"><span>수정 완료</span></a>
					<a href=""	class="btnType gray"  id="btnCloseGrpCod" name="btn"><span>취소</span></a>
				</div>
			</dd>
		</dl>
		<a href="" class="closePop"><span class="hidden">닫기</span></a>
	</div>
	<!--// 모달팝업 -->
</form>
</body>
</html>